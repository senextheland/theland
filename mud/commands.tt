#class {commands} {open}

#var {target} {}

#alias {cmd_noop} {
  exec_task {cmd_noop} {#show cmd_noop} {%1} {%2} {
    #action {cmd_noop} {trampoline {cmd_noop} {task_cmd_noop_done}}
  }
}

