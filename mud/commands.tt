#alias {cmd_recall} {
  exec_task {cmd_recall} {look} {%1} {%2} {
    #action {Inn of the Flying Circus} {task_cmd_recall_done};
    #action {Exits:} {rec recall-scroll};
    #action {You do not have that item.} {
      cmd_recall_fallback
        {task_cmd_recall_done}
